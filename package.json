{
  "name": "zoomies",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ignore": [
      "server/public/",
      "server/sessions/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "server/public/main.js"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "extends": [
      "plugin:react/recommended",
      "eslint:recommended",
      "standard"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "padded-blocks": 0,
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "react/prop-types": 0
    }
  },
  "dependencies": {
    "@petfinder/petfinder-js": "^1.0.6",
    "dotenv": "8.2.0",
    "express": "^4.17.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-transform-react-jsx": "7.12.5",
    "@babel/preset-env": "7.12.1",
    "babel-eslint": "8.2.6",
    "babel-loader": "8.2.1",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.3.0",
    "lint-staged": "9.5.0",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "webpack": "5.4.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "scripts": {
    "dev": "npm-run-all --silent --parallel dev:*",
    "dev:client": "webpack-dev-server",
    "dev:server": "nodemon server/index.js",
    "build": "webpack --mode=production",
    "start": "NODE_ENV=production node server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlette-pineda/zoomies.git"
  },
  "keywords": [],
  "author": "arlette_pineda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arlette-pineda/zoomies/issues"
  },
  "homepage": "https://github.com/arlette-pineda/zoomies#readme"
}
